@using EatTogether.Models
@model  IEnumerable<SessionModel>

@{
    ViewBag.Title = "JoinSessions";

}

<div class="jumbotron" style="margin-top: 50px; background-color: white; height: 100%; font-family: Berlin Sans FB; ">

    <table id="tb1" class="table">
        <thead>
            <tr>
                <th>
                    User Count
                </th>
                <th>
                    Space Remaining
                </th>
                <th>
                    Date
                </th>
                <th>
                    Description
                </th>
                <th>
                    City
                </th>
                <th>
                    Venue
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.UserCount
                    </td>
                    <td>
                        @item.SpaceRemaining
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.City
                    </td>
                    <td>
                        @item.Place.Name
                    </td>

                    <td>
                        @Html.ActionLink("Join", "Join", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>

@section Scripts{

    <link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>
    <script src="https://datatables.net/extensions/buttons/examples/initialisation/custom.html"></script>
        <script>
            $(document).ready(function () {
                $('#tb1').DataTable({
                });
            });
    </script>
}




